<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% if (errors !== undefined) { %>
        <% errors.forEach(function(error) { %>
            <h3 style="color: red;"><%= error %></h3>
        <% }) %>
    <% } %>
    <h1>Create New Contact</h2>
    <form action="/contacts/private/create" method="post">
        <label for="name">Name:</label> <br>
        <input type="text" name="name" id="" placeholder="Please enter name!" required> <br>
        <label for="email">Email:</label> <br>
        <input type="text" name="email" id="" placeholder="Please enter email!" required> <br>
        <label for="phone">Phone:</label> <br>
        <input type="text" name="phone" id="" placeholder="Please enter phone!" required> <br>
        <label for="address">Address:</label> <br>
        <input type="text" name="address" id="" placeholder="Please enter address!" required> <br>

        <button type="submit">Add</button>
    </form>
</body>
</html>